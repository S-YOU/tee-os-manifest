    <linkfile src="libelf"  dest="libs/libelf" />
    <linkfile src="libplatsupport" dest="libs/libplatsupport" />
    <linkfile src="libutils" dest="libs/libutils" />
</project>

<!-- the tee code -->
<project name="tee-os-manifest.git" path="./" remote="current" revision="master">
